{
  "name": "next-ecommerce-dekoartizan",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "npm run dev:reset && concurrently -n backend,frontend,admin -c green,cyan,magenta \"npm run dev:backend\" \"npm run dev:frontend:wait\" \"npm run dev:admin:wait\"",
    "dev:kill": "npx --yes kill-port 3000 3001 3002 5000 || echo \"⚠️ Some ports may still be in use\"",
    "dev:unlock": "node -e \"const fs=require('fs'); const paths=['.next/dev/lock','admin/.next/dev/lock']; paths.forEach(p=>{if(fs.existsSync(p)){fs.unlinkSync(p);console.log('✅ Removed '+p);}else{console.log('ℹ️ No lock file at '+p);}});\"",
    "dev:reset": "npm run dev:kill && npm run dev:unlock",
    "dev:frontend": "next dev",
    "dev:frontend:wait": "wait-on -t 60000 http://127.0.0.1:5000/api/health && next dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:admin": "cd admin && npm run dev -- -p 3001",
    "dev:admin:wait": "wait-on -t 60000 http://127.0.0.1:5000/api/health && npm run dev:admin",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-icons": "^1.3.1",
    "@radix-ui/react-navigation-menu": "^1.2.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.2.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.2.6",
    "@reduxjs/toolkit": "^2.3.0",
    "@tailwindcss/postcss": "^4.1.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.3.0",
    "framer-motion": "^12.26.2",
    "holy-loader": "^2.3.7",
    "lucide-react": "0.562.0",
    "next": "^16.1.0",
    "pg": "^8.13.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.4.0",
    "react-redux": "^9.2.0",
    "react-simple-star-rating": "^5.1.7",
    "redux-persist": "^6.0.0",
    "tailwind-merge": "3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "usehooks-ts": "^3.1.0",
    "vaul": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "concurrently": "^9.1.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.7.2",
    "kill-port": "^2.0.1",
    "wait-on": "^8.0.5"
  }
}
